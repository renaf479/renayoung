{
  "name": "renayoung",
  "version": "1.0.0",
  "description": "Portfolio site",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all clean build -p serve watch:*",
    "publish": "npm-run-all clean build",
    "build": "npm-run-all -p build:css build:js build:svg -s build:jekyll -p copy:css copy:js",
    "build:css": "npm run sass && npm run postcss",
    "build:images": "cp -R assets/images src/images",
    "build:js": "npm run lint && npm run uglify",
    "build:jekyll": "jekyll build --source ./src --destination ./dist",
    "build:svg": "npm run svg",
    "clean": "rm -rf ./src/js ./src/css ./src/images",
    "clean:publish": "rm -rf ./publish/*.*",
    "copy:css": "mkdir -p ./dist/css/build/scss && cp -R ./build/scss ./dist/css/build/",
    "copy:images": "cp -R assets/images src/",
    "copy:js": "mkdir -p ./dist/js/build/js && cp -R ./build/js ./dist/js/build/",
    "copy:publish": "cp -R ./dist/* ./publish",
    "lint": "eslint ./build/js || true",
    "lint-scss": "stylelint ./src/scss/*.scss --syntax scss || true",
    "postcss": "postcss -u autoprefixer -b < src/css/main.css | postcss -u cssnano > src/css/main.min.css",
    "sass": "node-sass assets/scss/main.scss --output=src/css/ --source-map=true ",
    "serve": "browser-sync start --server './dist' --no-open",
    "serve:reload": "browser-sync reload",
    "svg": "svgo -f assets/svg -o src/svg && svg-sprite-generate -d src/svg -o src/_includes/icons.svg",
    "uglify": "mkdir -p ./src/js && uglifyjs ./build/js/*.js -m -o src/js/app.js --source-map src/js/app.js.map --source-map-url app.js.map",
    "watch:css": "onchange 'assets/scss/**/*.scss' -- npm run build:css",
    "watch:jekyll": "onchange './src/index.md' './src/_includes/*' './src/_layouts/*.html' './src/css/*.css' './src/js/*.js' -- npm-run-all build:jekyll -p copy:css copy:js serve:reload",
    "watch:js": "onchange './build/js/**/*.js' -- npm run build:js",
    "watch:svg": "onchange 'assets/svg/**/*.svg' -- npm run build:svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renaf479/renayoung.git"
  },
  "author": "Serena Young",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/renaf479/renayoung/issues"
  },
  "homepage": "https://github.com/renaf479/renayoung#readme",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "browser-sync": "2.18.8",
    "cssnano": "^3.10.0",
    "eslint": "3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "imagemin": "^5.2.2",
    "node-sass": "4.5.2",
    "npm-run-all": "4.0.2",
    "onchange": "3.2.1",
    "postcss-cli": "3.1.1",
    "source-map": "0.5.6",
    "stylelint": "^7.10.1",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2",
    "uglify-js": "2.8.22"
  },
  "dependencies": {
    "normalize.css": "^6.0.0"
  }
}
