{
  "name": "renayoung",
  "version": "1.0.0",
  "description": "Portfolio site",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all clean build -p serve watch:*",
    "publish": "npm-run-all clean build",
    "autoprefixer": "postcss -u autoprefixer -r ./src/css/*.css",
    "build": "npm-run-all -p build:css build:js -s build:jekyll -p copy:css copy:js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:jekyll": "jekyll build --source ./src --destination ./dist",
    "clean": "rm -rf ./src/js ./src/css",
    "clean:publish": "rm -rf ./publish/*.*",
    "copy:css": "mkdir -p ./dist/css/build/scss && cp -R ./build/scss ./dist/css/build/",
    "copy:js": "mkdir -p ./dist/js/build/js && cp -R ./build/js ./dist/js/build/",
    "copy:publish": "cp -R ./dist/* ./publish",
    "lint": "eslint ./build/js || true",
    "lint-scss": "stylelint ./src/scss/*.scss --syntax scss || true",
    "scss": "node-sass --output-style compressed --source-map-embed true ./build/scss/main.scss ./src/css/main.css",
    "serve": "browser-sync start --server './dist' --files './dist/css/*.css, ./dist/js/*.js' --no-open",
    "serve:reload": "browser-sync reload",
    "uglify": "mkdir -p ./src/js && uglifyjs ./build/js/*.js -m -o src/js/app.js --source-map src/js/app.js.map --source-map-url app.js.map",
    "watch:css": "onchange './build/scss/**/*.scss' -- npm run build:css",
    "watch:jekyll": "onchange './src/index.md' './src/_includes/*.html' './src/_layouts/*.html' './src/css/*.css' './src/js/*.js' -- npm-run-all build:jekyll -p copy:css copy:js serve:reload",
    "watch:js": "onchange './build/js/*.js' -- npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renaf479/renayoung.git"
  },
  "author": "Serena Young",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/renaf479/renayoung/issues"
  },
  "homepage": "https://github.com/renaf479/renayoung#readme",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "browser-sync": "2.18.8",
    "eslint": "3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "node-sass": "4.5.2",
    "npm-run-all": "4.0.2",
    "onchange": "3.2.1",
    "postcss-cli": "3.1.1",
    "source-map": "0.5.6",
    "stylelint": "^7.10.1",
    "uglify-js": "2.8.22"
  },
  "dependencies": {
    "normalize.css": "^6.0.0"
  }
}
