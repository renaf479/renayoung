{
  "name": "renayoung",
  "version": "1.0.0",
  "description": "Portfolio site",
  "main": "app.js",
  "scripts": {
    "start": "npm run assets:build && npm-run-all -p css:watch js:watch svg:watch run:hugo",
    "assets:clean": "rm -rf ./static/assets/js/* static/assets/css/* static-src/assets/src-svg/compressed/*",
    "assets:build": "npm run assets:clean && npm-run-all css:build js:build svg:build",
    "build": "npm run assets:build && hugo",
    "run:hugo": "hugo server",
    "css:sass": "node-sass ./static-src/assets/src-sass/main.scss -o ./static/assets/css/ --source-map=true",
    "css:postcss": "postcss -u autoprefixer -b < ./static/assets/css/main.css | postcss -u cssnano --sourcemap > ./static/assets/css/main.min.css",
    "css:build": "npm run css:sass && npm run css:postcss",
    "css:watch": "onchange './static-src/assets/src-sass/**/*.scss' -- npm run css:build",
    "js:lint": "eslint ./static-src/assets/src-js/ || true",
    "js:uglify": "uglifyjs ./static-src/assets/src-js/* -m -o ./static/assets/js/app.js --source-map ./static/assets/js/app.js.map --source-map-url app.js/map",
    "js:build": "npm run js:lint && npm run js:uglify",
    "js:watch": "onchange './static-src/assets/src-js/**/*.js' -- npm run js:build",
    "svg:compress": "svgo -f ./static-src/assets/src-svg/raw -o ./static-src/assets/src-svg/compressed",
    "svg:sprite": "svg-sprite-generate -d ./static-src/assets/src-svg/compressed -o ./themes/renayoung/layouts/partials/icons.svg",
    "svg:build": "npm run svg:compress && npm run svg:sprite",
    "svg:watch": "onchange './static-src/assets/src-svg/raw/**/*.svg' -- npm run svg:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renaf479/renayoung.git"
  },
  "author": "Serena Young",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/renaf479/renayoung/issues"
  },
  "homepage": "https://github.com/renaf479/renayoung#readme",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "browser-sync": "2.18.8",
    "cssnano": "^3.10.0",
    "eslint": "3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "imagemin": "^5.2.2",
    "node-sass": "4.5.2",
    "npm-run-all": "4.0.2",
    "onchange": "3.2.1",
    "postcss-cli": "3.1.1",
    "source-map": "0.5.6",
    "stylelint": "^7.10.1",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2",
    "uglify-js": "2.8.22"
  },
  "dependencies": {
    "normalize.css": "^6.0.0"
  }
}
